<h1>Parties</h1>


<table class="table table-hover table-dark ">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Come√ßa</th>
      <th>Termina</th>
      <th>Horas</th>

      <th colspan="3" class="text-center">Menu</th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <td><%= party.begin %></td>
        <td><%= party.end %></td>
        <td><%= party.hours %></td>
        <td><%= link_to 'Show', party , class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_party_path(party), class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

